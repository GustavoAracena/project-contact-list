<%- include('includes/header'); %>
<%- include('includes/navbar'); %>

<div class="container">
	<div class="row">
		<div class="col-lg-2"></div>
		<div class="col-lg-8 mt-3">
			<h1 class="display-1 text-center">Contact</h1>
			<p class="text-center lead">Add or edit a contact</p>

			<%- include('includes/messages'); -%>
			<% if(contact._id) { %>
			<form action="/contact/edit/<%= contact._id %>" method="POST">
			<% } else { %>
			<form action="/contact/register" method="POST">
			<% } %>
				<input type="hidden" name="_csrf" value=<%= csrfToken %>>
				<div class="mb-3">
				<label for="inputName" class="form-label">Name</label>
				<input type="text" value="<%= contact.name %>" class="form-control" id="inputName" aria-describedby="nameHelp" name="name">
				</div>
				<div class="mb-3">
				<label for="inputLastName" class="form-label">Last Name</label>
				<input type="text" value="<%= contact.lastName %>" class="form-control" id="inputLastName" aria-describedby="lastNameHelp" name="lastName">
				</div>
				<div class="mb-3">
				<label for="inputEmail" class="form-label">Email</label>
				<input type="email" value="<%= contact.email %>" class="form-control" id="inputEmail" aria-describedby="emailHelp" name="email">
				</div>
				<div class="mb-3">
				<label for="inputTelephone" class="form-label">Telephone</label>
				<input type="tel" value="<%= contact.telephone %>" class="form-control" id="inputTelephone" aria-describedby="telephoneHelp" name="telephone">
				</div>
				<button type="submit" class="btn btn-primary">Save</button>
			</form>
		</div>
		<div class="col-lg-2"></div>
	</div>
</div>

<%- include('includes/footer'); %>
